/* app.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f8fa;
} 

/* 全局样式 */
page {
  background-color: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  width: 100%;
  height: 100%;
}

/* 头部渐变背景 */
.gradient-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 40rpx 30rpx 32rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.gradient-header .title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 16rpx;
}

.gradient-header .subtitle {
  font-size: 28rpx;
  opacity: 0.8;
  text-align: center;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  margin: 0 20rpx 20rpx;
  overflow: hidden;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.card-header {
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.card-body {
  padding: 30rpx;
}

.card-footer {
  padding: 24rpx 30rpx;
  border-top: 1px solid #f0f0f0;
  background: #fafafa;
}

/* 列表项样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
  background: white;
  width: 100%;
  box-sizing: border-box;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #1677ff;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.list-item .content {
  flex: 1;
}

.list-item .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.list-item .subtitle {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.list-item .desc {
  font-size: 20rpx;
  color: #ccc;
}

.list-item .right {
  text-align: right;
  flex-shrink: 0;
}

.list-item .amount {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.list-item .change {
  font-size: 24rpx;
  font-weight: 600;
}

/* 统计数据样式 */
.stat-row {
  display: flex;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-icon {
  font-size: 40rpx;
  margin-bottom: 16rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
}

/* 按钮样式 */
.btn {
  padding: 24rpx 48rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
  margin: 16rpx 0;
}

.btn-primary {
  background: #1677ff;
  color: white;
}

.btn-success {
  background: #52c41a;
  color: white;
}

.btn-danger {
  background: #ff4d4f;
  color: white;
}

.btn-ghost {
  background: transparent;
  border: 1px solid #d9d9d9;
  color: #333;
}

/* 颜色工具类 */
.text-green {
  color: #52c41a;
}

.text-red {
  color: #ff4d4f;
}

.text-gray {
  color: #999;
}

.text-primary {
  color: #1677ff;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 30rpx;
  bottom: 140rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #1677ff;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(22, 119, 255, 0.3);
  z-index: 1000;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 60rpx;
  color: #999;
}

.empty-state .icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-state .text {
  font-size: 28rpx;
}
