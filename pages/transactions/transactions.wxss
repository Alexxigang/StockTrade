/* pages/transactions/transactions.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  width: 100%;
}

.section-title {
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
}

.transaction-list {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.list-item:active {
  background-color: #f5f5f5;
}

/* 头像样式 */
.avatar-buy {
  background-color: #52c41a !important;
}

.avatar-sell {
  background-color: #ff4d4f !important;
}

.avatar .icon {
  font-size: 24rpx;
  font-weight: bold;
}

/* 标签样式 */
.tag {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  color: white;
}

.tag-buy {
  background-color: #52c41a;
}

.tag-sell {
  background-color: #ff4d4f;
}

/* 按钮样式 */
.btn {
  width: 100%;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-primary {
  background-color: #1677ff;
  color: white;
}

.btn-primary:active {
  background-color: #0958d9;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 120rpx 60rpx;
  color: #999;
}

.empty-state .icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-state .text {
  font-size: 28rpx;
}
