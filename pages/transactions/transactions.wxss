/* pages/transactions/transactions.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  width: 100%;
}

.section-title {
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
}

.transaction-list {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: white;
  transition: background-color 0.2s ease;
}

.list-item:active {
  background-color: #f8f9fa;
}

.list-item:last-child {
  border-bottom: none;
}

/* 头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.avatar-buy {
  background: linear-gradient(135deg, #00c851, #00a041) !important;
  box-shadow: 0 4rpx 12rpx rgba(0, 200, 81, 0.3);
}

.avatar-sell {
  background: linear-gradient(135deg, #ff4444, #cc0000) !important;
  box-shadow: 0 4rpx 12rpx rgba(255, 68, 68, 0.3);
}

.avatar .icon {
  font-size: 32rpx;
  font-weight: 700;
  color: white;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 内容区域 */
.content {
  flex: 1;
  min-width: 0;
}

.title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
  flex: 1;
  margin-right: 16rpx;
}

.subtitle {
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 标签样式优化 */
.tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: white;
  display: inline-block;
  min-width: 48rpx;
  text-align: center;
  line-height: 1.3;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
}

.tag-buy {
  background: linear-gradient(135deg, #00c851, #00a041);
  border: 1rpx solid #00a041;
}

.tag-sell {
  background: linear-gradient(135deg, #ff4444, #cc0000);
  border: 1rpx solid #cc0000;
}

.desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
  flex: 1;
  margin-right: 16rpx;
}

.subtitle {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.user-name {
  margin-left: 16rpx;
  color: #666;
}

/* 右侧区域 */
.right {
  text-align: right;
  margin-left: 16rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.amount {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.text-green {
  color: #00c851;
}

.text-red {
  color: #ff4444;
}

.change {
  font-size: 24rpx;
  color: #1677ff;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

/* 按钮样式 */
.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  padding: 24rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.btn-secondary {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.btn-primary {
  background-color: #1677ff;
  color: white;
}

.btn-primary:active {
  background-color: #0958d9;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 120rpx 60rpx;
  color: #999;
}

.empty-state .icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-state .text {
  font-size: 28rpx;
}
