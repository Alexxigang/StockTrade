/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  width: 100%;
}

/* 个人信息 */
.profile-info {
  text-align: center;
  padding: 40rpx 0;
}

.avatar-large {
  width: 128rpx;
  height: 128rpx;
  border-radius: 64rpx;
  background: rgba(255,255,255,0.2);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  margin: 0 auto 24rpx;
}

.name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.desc {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 菜单项 */
.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 24rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
}

.menu-arrow {
  color: #999;
  font-size: 24rpx;
}

/* 用户项 */
.user-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.user-item:last-child {
  border-bottom: none;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background: #1677ff;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.user-contact {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.user-date {
  font-size: 20rpx;
  color: #999;
}

/* 统计网格 */
.stat-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
}

.stat-cell {
  text-align: center;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #1677ff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 小按钮 */
.btn-small {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  border: none;
}

.btn-small.btn-primary {
  background: #1677ff;
  color: white;
}

/* 卡片头部样式调整 */
.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
