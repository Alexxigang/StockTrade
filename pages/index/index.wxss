/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  width: 100%;
}

/* 欢迎区域 */
.welcome {
  text-align: center;
  padding: 50rpx 0 40rpx;
}

.logo {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 市场概览样式 */
.market-overview {
  display: flex;
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  margin: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.market-item {
  flex: 1;
  text-align: center;
  padding: 0 12rpx;
}

.market-item + .market-item {
  border-left: 1rpx solid #f0f0f0;
}

.market-name {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.market-price {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.market-change {
  font-size: 18rpx;
  font-weight: 500;
}

/* 搜索样式 */
.search-container {
  padding: 16rpx 20rpx;
  background: white;
  margin: 0 16rpx 16rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
}

.search-icon {
  font-size: 28rpx;
  color: #999;
  margin-right: 12rpx;
}

.search-placeholder {
  font-size: 26rpx;
  color: #999;
}

.search-keyword {
  font-size: 26rpx;
  color: #333;
}

/* 热门股票 */
.stock-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stock-item:last-child {
  border-bottom: none;
}

.stock-item:active {
  background: #f9f9f9;
}

.stock-left {
  flex: 1;
}

.stock-code {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.stock-name {
  font-size: 22rpx;
  color: #666;
}

.stock-right {
  text-align: right;
}

.stock-price {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.stock-change {
  font-size: 20rpx;
  font-weight: 500;
}

/* 快速操作 */
.action-item {
  text-align: center;
  padding: 32rpx 16rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s;
}

.action-item:active {
  background: #f9f9f9;
  transform: scale(0.98);
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.action-desc {
  font-size: 20rpx;
  color: #999;
}

/* 概览网格 */
.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  width: 100%;
}

.overview-item {
  text-align: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: white;
  border-radius: 12rpx;
}

.overview-number {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.overview-label {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 功能列表 */
.feature-list {
  /* space-y: 20rpx; */
}

.feature-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  margin-top: 4rpx;
  color: #1677ff;
}

.feature-content {
  flex: 1;
}

.feature-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 搜索模态框 */
.search-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.search-modal-content {
  background: white;
  height: 100vh;
}

.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: white;
}

.search-input-container {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 20rpx;
  padding: 12rpx 16rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  background: transparent;
  border: none;
}

.search-clear {
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background: #ccc;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  margin-left: 8rpx;
}

.search-cancel {
  font-size: 28rpx;
  color: #1677ff;
  padding: 8rpx 12rpx;
}

.search-results {
  background: white;
}

.search-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-item:active {
  background: #f9f9f9;
}

.search-item-left {
  flex: 1;
}

.search-item-code {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.search-item-name {
  font-size: 24rpx;
  color: #666;
}

.search-item-right {
  text-align: right;
}

.search-item-price {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.search-item-change {
  font-size: 22rpx;
  font-weight: 500;
}

/* 搜索历史 */
.search-history {
  padding: 20rpx;
  background: white;
}

.search-history-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.search-history-items {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.search-history-item {
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #666;
}

.search-history-item:active {
  background: #e0e0e0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 26rpx;
}
