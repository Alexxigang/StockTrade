/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  width: 100%;
}

/* 欢迎区域 */
.welcome {
  text-align: center;
  padding: 60rpx 0;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 快速操作 */
.quick-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  width: 100%;
}

.action-item {
  text-align: center;
  padding: 40rpx 20rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.action-item:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.action-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 概览网格 */
.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  width: 100%;
}

.overview-item {
  text-align: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 16rpx;
}

.overview-number {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.overview-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 功能列表 */
.feature-list {
  space-y: 24rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.feature-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
  color: #52c41a;
}

.feature-text {
  font-size: 28rpx;
  color: #333;
}
