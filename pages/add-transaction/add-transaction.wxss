/* pages/add-transaction/add-transaction.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 200rpx;
  width: 100%;
}

/* 表单样式 */
.form-item {
  margin-bottom: 32rpx;
}

.form-row {
  display: flex;
  gap: 24rpx;
}

.form-item.flex {
  flex: 1;
}

.label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #ff4d4f;
  margin-right: 8rpx;
  font-weight: 700;
}

.input, .textarea {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 1px solid #d9d9d9;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: white;
  box-sizing: border-box;
  transition: border-color 0.2s ease;
}

.input.error, .textarea.error, .picker.error {
  border-color: #ff4d4f;
  background-color: #fff2f0;
}

.input:focus, .textarea:focus {
  border-color: #1677ff;
}

.textarea {
  height: 120rpx;
  padding: 24rpx;
  resize: none;
}

.picker {
  height: 88rpx;
  padding: 0 24rpx;
  border: 1px solid #d9d9d9;
  border-radius: 12rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  transition: border-color 0.2s ease, background-color 0.2s ease;
}

.picker .arrow {
  color: #999;
  font-size: 24rpx;
}

.error-text {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
  line-height: 1.4;
}

.result {
  height: 88rpx;
  padding: 0 24rpx;
  border: 1px solid #52c41a;
  border-radius: 12rpx;
  background: #f6ffed;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #52c41a;
}

/* 操作按钮 */
.action-buttons {
  padding: 30rpx 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.btn {
  width: 100%;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-primary {
  background-color: #1677ff;
  color: white;
}

.btn-primary:disabled {
  background-color: #d9d9d9;
  color: #999;
}

.btn-primary:active:not(:disabled) {
  background-color: #0958d9;
}

.btn-ghost {
  background-color: transparent;
  border: 1px solid #d9d9d9;
  color: #333;
}

.btn-ghost:active {
  border-color: #1677ff;
  color: #1677ff;
}

.btn-danger {
  background-color: #ff4d4f;
  color: white;
}

.btn-danger:active {
  background-color: #d9363e;
}
