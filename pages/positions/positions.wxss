/* pages/positions/positions.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  width: 100%;
}

.section-title {
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
}

.position-list {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.list-item:active {
  background-color: #f5f5f5;
}

/* 重新定义统计卡片在这个页面的样式 */
.stat-row {
  display: flex;
  padding: 0;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-icon {
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: 600;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 120rpx 60rpx;
  color: #999;
}

.empty-state .icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-state .text {
  font-size: 28rpx;
}
